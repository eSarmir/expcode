{
  "name": "expcode",
  "displayName": "Expcode",
  "description": "Level up with your coding.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "expcode.showLanguageOfActiveEditor",
        "title": "Show language of active editor"
      },
      {
        "command": "expcode.showLevelForLanguage",
        "title": "Show level for language"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "expcode-view-container",
          "title": "Expcode",
          "icon": "resources/expcode_icon.svg"
        }
      ]
    },
    "views": {
      "expcode-view-container": [
        {
          "id": "expcode-view-container",
          "name": "Expcode"
        }
      ]
    },
    "configuration": {
      "title": "Expcode",
      "properties": {
        "expcode.showLanguageLevelUpNotification": {
          "type": "boolean",
          "default": true,
          "description": "Show language level up notification"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
